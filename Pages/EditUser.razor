@page "/user/edit"
@using Snipster.Data;
@using Snipster.Services;
@using Snipster.Components
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Components.Forms
@using static Snipster.Data.DBContext;


<EditForm Model="editUser" OnValidSubmit="HandleSave">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="modal-content">

        <div class="modal-header">
            <h3>Edit User Details</h3>
        </div>

        <div class="form-group">
            <label>First Name:</label>
            <input type="text" class="form-input" @bind="editUser.FirstName" />
        </div>

        <div class="form-group">
            <label>Last  Name:</label>
            <input type="text" class="form-input" @bind="editUser.LastName" />
        </div>

        <div class="form-group">
            <label>Email:</label>
            <input type="email" class="form-input" disabled @bind="editUser.Email" />
        </div>


        <div class="modal-footer">
            <button class="save-btn" type="submit">Save</button>
            <button class="save-btn" @onclick="Cancel">Cancel</button>
        </div>

    </div>
</EditForm>

<Modal @ref="spinnerModal">

</Modal>


