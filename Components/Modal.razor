@using Microsoft.AspNetCore.Components

@if (IsVisible)
{
    @if (!IsSpinner)
    {
        <div class="modal-overlay" @onclick="CloseModal">
            <div class="modal-content" @onclick:stopPropagation>
                <div class="modal-header">
                    <h3>@Title</h3>
                    <button @onclick="CloseModal" class="modal-close-btn">X</button>
                </div>
                <div class="modal-body">
                    @ChildContent
                </div>
                <div class="modal-footer">
                    <button class="cancel-btn" @onclick="CloseModal">Cancel</button>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="loading-overlay">
            <div class="spinner"></div>
        </div>
    }
}

<style>
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .modal-content {
        width: 500px;
        max-width: 90%;
        padding: 1.5em;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.15);
        display: flex;
        flex-direction: column;
        align-items: stretch;
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .modal-header h3 {
            font-size: 20px;
            color: #333;
            margin-bottom: 1em;
            text-align: center;
        }

    .modal-close-btn {
        background: none;
        border: none;
        font-size: 1.5em;
        cursor: pointer;
    }

    .modal-footer {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 1.5em;
    }

    .modal-footer-close-btn {
        padding: 10px;
        font-size: 14px;
        background-color: rgba(233, 168, 73);
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        width: 100%;
        max-width: 200px;
        align-self: flex-start;
    }

    .modal-footer-close-btn:hover {
        background-color: rgba(233, 168, 73, 0.5);
}

    .cancel-btn {
        padding: 10px 20px;
        background-color: #dc3545;
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .cancel-btn:hover {
            background-color: #c82333;
        }
</style>

